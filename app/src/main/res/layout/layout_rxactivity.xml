<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ybdj_details_bg_3x"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />

    <ImageView
        android:id="@+id/iv_decline"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:src="@mipmap/ybdj_public_decline_3x"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_odds_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.168"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dp_40" />

    <ImageView
        android:id="@+id/iv_rise"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:src="@mipmap/ybdj_public_rise_3x"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_odds_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.168"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dp_40" />
</LinearLayout>