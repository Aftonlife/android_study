<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ybdj_details_bg_3x"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_fish"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <tv.danmaku.ijk.media.example.widget.media.IjkVideoView
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_decline"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:src="@mipmap/ybdj_public_decline_3x"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/tv_odds_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_odds_1"
        app:layout_constraintTop_toTopOf="@+id/tv_odds_1" />

    <TextView
        android:id="@+id/tv_odds_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.168"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dp_40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <ImageView
        android:id="@+id/iv_rise"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:src="@mipmap/ybdj_public_rise_3x"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/tv_odds_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_odds_2"
        app:layout_constraintTop_toTopOf="@+id/tv_odds_2" />

    <TextView
        android:id="@+id/tv_odds_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.168"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dp_40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_odds_1" />
</androidx.constraintlayout.widget.ConstraintLayout>